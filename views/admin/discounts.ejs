<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard – Discounts</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/AdminDashboard.css">

  <style>
    .gradient-btn{background:linear-gradient(90deg,#03C4E7,#0047FF);color:#fff;border:none}
    .gradient-btn:hover{opacity:.9;color:#fff}
    .modal-header-gradient{background:linear-gradient(90deg,#03C4E7,#0047FF);color:#fff}
    .btn-close-white{filter:invert(1)}
    .gradient-btn-icon{background:linear-gradient(90deg,#03C4E7,#0047FF);color:#fff;border:none}
    .gradient-btn-icon:hover{opacity:.85}
    .voucher-img-fixed{width:100%;height:200px;object-fit:cover;background:#f3f3f3}
  </style>
</head>
<body>

<div class="sidebar" id="sidebar">
  <div class="d-flex justify-content-center mb-5 mt-3">
      <img src="<%= settings.logo ? settings.logo : '/images/napslogo.png' %>" alt="Logo" width="150" />
  </div>
  <nav>
    <a href="/admin/index"><i class="bi bi-speedometer2"></i> Dashboard</a>
    <a href="/admin/users"><i class="bi bi-person-circle"></i> Users Profile</a>
    <a href="/admin/staff"><i class="bi bi-people-fill"></i> Account Creation</a>
    <a href="/admin/orders"><i class="bi bi-receipt"></i> Orders</a>
    <a href="/admin/reservations"><i class="bi bi-journal-bookmark"></i> Reservations</a>
    <a href="/admin/discounts" class="active"><i class="bi bi-percent"></i> Discounts</a>
    <a href="/admin/reviews"><i class="bi bi-chat-dots"></i> Users Reviews</a>
    <a href="/admin/products"><i class="bi bi-box-seam"></i> Inventory</a>
    <a href="/admin/table"><i class="bi bi-table"></i> Table</a>
          <a href="/admin/settings"><i class="bi bi-gear"></i> Settings</a>
  </nav>
</div>

<div class="main-content">
  <div class="navbar-custom-wrapper">
    <nav class="navbar navbar-custom d-flex justify-content-between align-items-center">
      <div class="d-flex align-items-center">
        <img src="/images/admin-avatar.avif" alt="Admin"
             class="rounded-circle me-3" style="width:40px;height:40px;object-fit:cover;">
        <div class="admin-info">
          <div class="fw-semibold">Super Admin</div>
          <p>napsgrillrestobar08@gmail.com</p>
        </div>
      </div>
      <a href="/logout" class="btn btn-sm btn-danger d-flex align-items-center">
        <i class="bi bi-box-arrow-right"></i>
      </a>
    </nav>
  </div>

  <div class="container-fluid">
    <h1 class="mb-4 fw-bold ms-2" style="color:#333446;">Vouchers</h1>

    <div class="d-flex align-items-center justify-content-between ms-2 mb-3 flex-wrap">
      <button class="btn gradient-btn" data-bs-toggle="modal" data-bs-target="#addVoucherModal">
        <i class="bi bi-plus-circle me-1"></i>Add Voucher
      </button>
    </div>

    <div class="modal fade" id="addVoucherModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header modal-header-gradient">
            <h5 class="modal-title">Create New Voucher</h5>
            <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
          </div>
          <form action="/admin/vouchers/create" method="POST" enctype="multipart/form-data">
            <div class="modal-body">
              <div class="row g-3">
                <div class="col-md-4">
                  <label class="form-label fw-semibold">Code</label>
                  <input name="code" class="form-control" required>
                </div>
                <div class="col-md-4">
                  <label class="form-label fw-semibold">Discount (%)</label>
                  <input name="discount" type="number" min="1" max="100" class="form-control" required>
                </div>
                <div class="col-md-4">
                  <label class="form-label fw-semibold">Min Spend (₱)</label>
                  <input name="minSpend" type="number" min="0" class="form-control">
                </div>
                <div class="col-md-4">
                  <label class="form-label fw-semibold">Expiry Date</label>
                  <input name="expiryDate" type="date" class="form-control" required>
                </div>
                <div class="col-md-8">
                  <label class="form-label fw-semibold">Voucher Image</label>
                  <input name="image" type="file" accept="image/*" class="form-control">
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button class="btn gradient-btn">Save Voucher</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="row g-4 ms-2 me-2">
      <% if (vouchers.length === 0) { %>
        <p class="text-center mb-0">No vouchers available.</p>
      <% } else { %>
        <% vouchers.forEach(v => { %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card shadow-sm h-100 <%= v.expiryDate < new Date() ? 'border-danger' : '' %>">
            <img src="/<%= v.image || 'images/voucher-placeholder.png' %>"
                 class="card-img-top voucher-img-fixed" alt="Voucher">
            <div class="card-body d-flex flex-column text-center">
              <h5 class="card-title fw-bold mb-2"><%= v.code %></h5>
              <p class="card-text mb-1">Discount: <strong><%= v.discount %>%</strong></p>
              <p class="card-text mb-1">Min Spend: <strong>₱<%= v.minSpend.toFixed(2) %></strong></p>
              <p class="card-text mb-3">
                Expires:
                <%= new Date(v.expiryDate).toLocaleDateString('en-US',{month:'long',day:'numeric',year:'numeric'}) %>
              </p>
            </div>
            <div class="card-footer d-flex justify-content-between p-2">
              <button class="btn btn-sm gradient-btn-icon me-1"
                      data-bs-toggle="modal" data-bs-target="#editVoucher-<%= v._id %>">
                <i class="bi bi-pencil-square"></i>
              </button>
              <form action="/admin/vouchers/<%= v._id %>/delete"
                    class="d-inline" method="POST" onsubmit="return confirmDelete(event)">
                <button class="btn btn-sm gradient-btn-icon"><i class="bi bi-trash"></i></button>
              </form>
            </div>
          </div>
        </div>
        <% }) %>
      <% } %>
    </div>

    <% vouchers.forEach(v => { %>
    <div class="modal fade" id="editVoucher-<%= v._id %>" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header modal-header-gradient">
            <h5 class="modal-title">Edit Voucher – <%= v.code %></h5>
            <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
          </div>
          <form action="/admin/vouchers/<%= v._id %>/edit" method="POST" enctype="multipart/form-data">
            <div class="modal-body">
              <div class="row g-3">
                <div class="col-md-4">
                  <label class="form-label fw-semibold">Code</label>
                  <input name="code" value="<%= v.code %>" class="form-control" required>
                </div>
                <div class="col-md-4">
                  <label class="form-label fw-semibold">Discount (%)</label>
                  <input name="discount" type="number" min="1" max="100"
                         value="<%= v.discount %>" class="form-control" required>
                </div>
                <div class="col-md-4">
                  <label class="form-label fw-semibold">Min Spend (₱)</label>
                  <input name="minSpend" type="number" min="0"
                         value="<%= v.minSpend %>" class="form-control">
                </div>
                <div class="col-md-4">
                  <label class="form-label fw-semibold">Expiry Date</label>
                  <input name="expiryDate" type="date"
                         value="<%= v.expiryDate.toISOString().split('T')[0] %>"
                         class="form-control" required>
                </div>
                <div class="col-md-8">
                  <label class="form-label fw-semibold">Replace Image</label>
                  <input name="image" type="file" accept="image/*" class="form-control">
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button class="btn gradient-btn">Save Changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <% }) %>

  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  (function(){
    const key = new URLSearchParams(location.search).get('success');
    const map = {create:'Voucher created!',update:'Voucher updated!',delete:'Voucher deleted!'};
    if (map[key]) Swal.fire({icon:'success',title:map[key],timer:1600,showConfirmButton:false});
  })();

  function confirmDelete(e){
    e.preventDefault();
    Swal.fire({
      icon:'warning',title:'Delete this voucher?',showCancelButton:true,
      confirmButtonText:'Yes, delete'
    }).then(res=>{ if(res.isConfirmed) e.target.submit(); });
    return false;
  }

</script>
</body>
</html>
