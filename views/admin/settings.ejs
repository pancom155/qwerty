 <div class="container mt-5">
  <h4 class="mb-4 text-center fw-bold">Settings</h4>

  <div class="row g-4 justify-content-center">
    <!-- Logo Upload Column -->
    <div class="col-md-6">
      <div class="card shadow-sm p-4 rounded-4">
        <h5 class="text-center mb-3">Logo Settings</h5>

        <form id="logoUploadForm" action="/admin/settings/upload-logo" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <label class="form-label fw-semibold">Upload Logo</label>
            <input type="file" name="logo" class="form-control" required>
          </div>
          <button type="submit" class="btn btn-primary w-100">Upload Logo</button>
        </form>

        <div class="text-center mt-3">
          <h6 class="text-muted mb-2">Current Logo</h6>
          <img src="<%= settings.logo ? settings.logo : '/images/napslogo.png' %>" alt="Logo" width="100" class="img-fluid rounded shadow-sm">
        </div>
      </div>
    </div>

    <!-- QR Upload Column -->
    <div class="col-md-6">
      <div class="card shadow-sm p-4 rounded-4">
        <h5 class="text-center mb-3">Reservation QR Settings</h5>

        <form id="qrUploadForm" action="/admin/settings/upload-reservation-qr" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <label class="form-label fw-semibold">Upload Reservation QR Code</label>
            <input type="file" name="reservationQR" class="form-control" required>
          </div>
          <button type="submit" class="btn btn-secondary w-100">Upload QR Code</button>
        </form>

        <div class="text-center mt-3">
          <h6 class="text-muted mb-2">Current Reservation QR</h6>
          <% if (settings.reservationQR) { %>
            <img src="<%= settings.reservationQR %>" alt="QR Code" width="100" class="img-fluid rounded shadow-sm">
          <% } else { %>
            <p class="text-muted">No QR code uploaded yet.</p>
          <% } %>
        </div>
      </div>
    </div>


    <!-- Order QR Upload Column -->
<div class="col-md-6">
  <div class="card shadow-sm p-4 rounded-4">
    <h5 class="text-center mb-3">Order QR Settings</h5>

    <form id="orderQrUploadForm" action="/admin/settings/upload-order-qr" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label fw-semibold">Upload Order QR Code</label>
        <input type="file" name="orderQR" class="form-control" required>
      </div>
      <button type="submit" class="btn btn-success w-100">Upload Order QR Code</button>
    </form>

    <div class="text-center mt-3">
      <h6 class="text-muted mb-2">Current Order QR</h6>
      <% if (settings.orderQR) { %>
        <img src="<%= settings.orderQR %>" alt="Order QR" width="100" class="img-fluid rounded shadow-sm">
      <% } else { %>
        <p class="text-muted">No Order QR code uploaded yet.</p>
      <% } %>
    </div>
  </div>
</div>
  </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
  // Function to add SweetAlert confirmation to form
  function confirmFormSubmit(formId, title = 'Are you sure?', message = 'Do you want to continue?') {
    const form = document.getElementById(formId);

    form.addEventListener('submit', function (e) {
      e.preventDefault(); // prevent default form submission

      Swal.fire({
        title: title,
        text: message,
        icon: 'question',
        showCancelButton: true,
        confirmButtonText: 'Yes, upload it!',
        cancelButtonText: 'Cancel'
      }).then((result) => {
        if (result.isConfirmed) {
          form.submit(); // proceed with actual submission
        }
      });
    });
  }

  // Apply SweetAlert to each form
  confirmFormSubmit('logoUploadForm', 'Upload Logo?', 'Do you want to upload this logo?');
  confirmFormSubmit('qrUploadForm', 'Upload Reservation QR?', 'Do you want to upload this reservation QR code?');
  confirmFormSubmit('orderQrUploadForm', 'Upload Order QR?', 'Do you want to upload this order QR code?');

  // Handle success and error messages from server
  <% if (typeof success !== 'undefined') { %>
    Swal.fire({
      icon: 'success',
      title: 'Success',
      text: '<%= success %>'
    });
  <% } %>

  <% if (typeof error !== 'undefined') { %>
    Swal.fire({
      icon: 'error',
      title: 'Error',
      text: '<%= error %>'
    });
  <% } %>
</script>

</body>
</html>
