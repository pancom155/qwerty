<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Checkout</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
  <style>
    :root {
      --primary: #ff6600;
      --primary-light: #ff7700;
      --secondary: #6c757d;
      --success: #28a745;
      --info: #17a2b8;
      --warning: #ffc107;
      --danger: #dc3545;
      --light: #f8f9fa;
      --dark: #343a40;
      --white: #ffffff;
      --gray-light: #f5f7fa;
      --border-radius: 12px;
      --box-shadow: 0 5px 15px rgba(0,0,0,0.08);
      --transition: all 0.3s ease;
    }

    body {
      background: linear-gradient(135deg, #f5f7fa 0%, #e4edf5 100%);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      min-height: 100vh;
    }

    h2 {
      font-weight: 800;
      color: #333;
      position: relative;
      display: inline-block;
    }

    h2 span {
      color: var(--primary);
    }

    .page-title {
      position: relative;
      padding-bottom: 15px;
    }

    .page-title:after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 80px;
      height: 4px;
      background: linear-gradient(to right, var(--primary), var(--primary-light));
      border-radius: 2px;
    }

    .gradient-btn {
      background: linear-gradient(to right, var(--primary), var(--primary-light));
      border: none;
      color: var(--white);
      font-weight: 600;
      transition: var(--transition);
      box-shadow: 0 4px 10px rgba(255, 102, 0, 0.3);
      padding: 12px 24px;
    }

    .gradient-btn:hover {
      opacity: 0.9;
      color: var(--white);
      transform: translateY(-2px);
      box-shadow: 0 6px 15px rgba(255, 102, 0, 0.4);
    }

    /* ðŸ”¸ Loader Overlay */
    #loadingOverlay {
      position: fixed;
      top: 0; left: 0;
      width: 100%; height: 100%;
      background: rgba(255, 255, 255, 0.95);
      display: none;
      justify-content: center;
      align-items: center;
      z-index: 2000;
      transition: var(--transition);
    }

    .loader-content {
      text-align: center;
    }

    .loader-content img {
      width: 180px;
    }

    .loader-content p {
      margin-top: 15px;
      font-weight: 600;
      color: var(--dark);
    }

    /* ðŸ”¸ Modal Styling */
    .modal-header {
      background: rgb(218, 218, 218);
      color: black;
      border-bottom: none;
      padding: 1.2rem 1.5rem;
    }

    .modal-content {
      border-radius: var(--border-radius);
      overflow: hidden;
      border: none;
      box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    }

    .modal-footer {
      border-top: 1px solid #e9ecef;
      padding: 1.2rem 1.5rem;
    }

    /* ðŸ”¸ Combined Order Summary Card */
    .combined-card {
      background: var(--white);
      border-radius: var(--border-radius);
      box-shadow: var(--box-shadow);
      border: none;
      overflow: hidden;
      max-width: 800px;
      margin: 0 auto 1.5rem;
    }

    .combined-card .card-header {
      background: rgb(255, 255, 255);
      color: black;
      border-bottom: none;
      padding: 1rem 1.5rem;
      font-weight: 600;
    }

    .combined-card .card-body {
      padding: 1.5rem;
    }

    .product-table-container {
      max-height: 300px;
      overflow-y: auto;
      border: 1px solid #dee2e6;
      border-radius: var(--border-radius);
      background: var(--white);
      margin-bottom: 1.5rem;
    }

    .product-table-container thead th {
      position: sticky;
      top: 0;
      background: #f8f9fa;
      z-index: 1;
      font-weight: 600;
      color: var(--dark);
      border-bottom: 2px solid var(--primary);
    }

    .product-table-container tbody tr:hover {
      background-color: rgba(255, 102, 0, 0.05);
    }

    .voucher-section {
      padding-bottom: 1.5rem;
      margin-bottom: 1.5rem;
      border-bottom: 1px dashed #dee2e6;
    }

    .voucher-section .form-label {
      font-weight: 600;
      color: var(--dark);
      margin-bottom: 0.8rem;
    }

    .totals-section ul li {
      font-size: 0.95rem;
      padding: 8px 0;
      border-bottom: 1px solid #f1f1f1;
    }

    .totals-section ul li:last-child {
      border-bottom: none;
    }

    .totals-section .fw-bold {
      font-size: 1.1rem;
    }

    .alert-custom {
      border-radius: var(--border-radius);
      border: none;
      box-shadow: 0 3px 10px rgba(0,0,0,0.08);
      max-width: 800px;
      margin: 0 auto 1.5rem;
    }

    .back-btn {
      color: var(--secondary);
      transition: var(--transition);
      font-weight: 500;
    }

    .back-btn:hover {
      color: var(--primary);
      transform: translateX(-3px);
    }

    .qr-container {
      background: var(--white);
      border-radius: var(--border-radius);
      padding: 20px;
      box-shadow: 0 5px 15px rgba(0,0,0,0.05);
      display: inline-block;
      margin: 15px 0;
    }

    .net-total-display {
      background: linear-gradient(135deg, #f8f9fa, #e9ecef);
      border-radius: var(--border-radius);
      padding: 12px 20px;
      font-weight: 700;
      font-size: 1.2rem;
      color: var(--dark);
      box-shadow: 0 3px 10px rgba(0,0,0,0.05);
    }

    .form-control:focus {
      border-color: var(--primary);
      box-shadow: 0 0 0 0.25rem rgba(255, 102, 0, 0.25);
    }

    .form-select:focus {
      border-color: var(--primary);
      box-shadow: 0 0 0 0.25rem rgba(255, 102, 0, 0.25);
    }

    .step-indicator {
      display: flex;
      justify-content: center;
      margin-bottom: 2rem;
    }

    .step {
      display: flex;
      align-items: center;
      margin: 0 10px;
    }

    .step-number {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: #e9ecef;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 700;
      margin-right: 10px;
      color: rgb(84, 84, 84);
    }

    .step.active .step-number {
      background: green;
      color: rgb(255, 255, 255);
    }

    .step-text {
      font-weight: 600;
      color: rgb(120, 120, 120);
    }

    .step.active .step-text {
      color: green;
    }

    .step-connector {
      width: 40px;
      height: 2px;
      background: #e9ecef;
      margin: 0 5px;
    }

    /* Voucher Minimum Spend Alert */
    .voucher-minimum-alert {
      background: linear-gradient(135deg, #fff3cd, #ffeaa7);
      border: 1px solid #ffc107;
      border-radius: var(--border-radius);
      padding: 12px 15px;
      margin-top: 10px;
      display: none;
    }

    .voucher-minimum-alert.show {
      display: block;
      animation: fadeIn 0.3s ease;
    }

    /* Auto-submit loading state */
    .voucher-loading {
      position: relative;
      pointer-events: none;
    }

    .voucher-loading::after {
      content: '';
      position: absolute;
      top: 50%;
      right: 10px;
      transform: translateY(-50%);
      width: 16px;
      height: 16px;
      border: 2px solid transparent;
      border-top: 2px solid var(--primary);
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      0% { transform: translateY(-50%) rotate(0deg); }
      100% { transform: translateY(-50%) rotate(360deg); }
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    /* Responsive */
    @media (max-width: 576px) {
      h2 {
        font-size: 1.6rem;
      }
      .product-table-container {
        max-height: 220px;
      }
      .step {
        flex-direction: column;
        text-align: center;
      }
      .step-number {
        margin-right: 0;
        margin-bottom: 5px;
      }
      .step-connector {
        width: 2px;
        height: 20px;
      }
      .combined-card {
        margin-left: 1rem;
        margin-right: 1rem;
      }
    }
  </style>
</head>
<body>

  <div id="loadingOverlay">
    <div class="loader-content">
      <img src="/images/loading.gif" alt="Loading...">
      <p>Processing your order...</p>
    </div>
  </div>

  <div class="container py-4">
    <div class="text-center mb-5">
      <h2 class="page-title">Review & <span>Checkout</span></h2>
    </div>

    <% if (pwdCooldownRemaining > 0 && pwdCountdownEnd) { %>
      <div class="alert alert-info alert-custom text-center">
        <i class="fas fa-clock me-2"></i>
        PWD Discount is available again in:
        <span id="pwd-timer" class="fw-bold ms-2"></span>
      </div>
    <% } else if (pwdDiscountAmount > 0) { %>
      <div class="alert alert-success alert-custom text-center">
        <i class="fas fa-check-circle me-2"></i>
        PWD Discount Applied: â‚±<%= pwdDiscountAmount.toFixed(2) %>
      </div>
    <% } %>

    <!-- Voucher Minimum Spend Alert -->
    <div id="voucherMinimumAlert" class="alert alert-warning alert-custom text-center" style="display: none;">
      <i class="fas fa-exclamation-triangle me-2"></i>
      <span id="voucherAlertMessage"></span>
    </div>

    <!-- Step Indicator -->
    <div class="step-indicator">
      <div class="step active">
        <div class="step-number">1</div>
        <div class="step-text">Review Order</div>
      </div>
      <div class="step-connector"></div>
      <div class="step">
        <div class="step-number">2</div>
        <div class="step-text">Payment</div>
      </div>
      <div class="step-connector"></div>
      <div class="step">
        <div class="step-number">3</div>
        <div class="step-text">Confirmation</div>
      </div>
    </div>

    <!-- ðŸ›ï¸ COMBINED ORDER SUMMARY & VOUCHER CARD -->
    <div class="card combined-card">
      <div class="card-header text-center">
        <h5 class="mb-0"><i class="fas fa-shopping-basket me-2"></i>Order Summary & Total</h5>
      </div>
      <div class="card-body">
        <!-- Products Table -->
        <div class="product-table-container">
          <table class="table align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th>Product</th>
                <th class="text-end">Price</th>
                <th class="text-center">Qty</th>
                <th class="text-end">Subtotal</th>
              </tr>
            </thead>
            <tbody>
              <% items.forEach(item => { %>
                <tr>
                  <td class="d-flex align-items-center gap-2">
                    <img src="/uploads/<%= item.image %>" alt="" class="rounded" style="width:45px;height:45px;object-fit:cover;">
                    <span><%= item.name %></span>
                  </td>
                  <td class="text-end">â‚±<%= item.price.toFixed(2) %></td>
                  <td class="text-center"><%= item.quantity %></td>
                  <td class="text-end fw-semibold">â‚±<%= item.subtotal.toFixed(2) %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>

        <!-- ðŸŽŸï¸ Voucher Section -->
        <div class="voucher-section">
          <div id="voucherForm">
            <label class="form-label fw-semibold">Apply Voucher</label>
            <div class="input-group">
              <select name="voucher" class="form-select" id="voucherSelect">
                <option value="">-- No Voucher --</option>
                <% if (user && user._id) { %>
                  <% vouchers.forEach(v => {
                      const hasUsed = v.redeemedBy?.some(u => u.toString() === user._id.toString());
                      const hasClaimed = v.claimedBy?.some(u => u.toString() === user._id.toString());
                      if (!hasUsed && hasClaimed) { %>
                        <option 
                          value="<%= v.code %>" 
                          <%= v.code === voucherCode ? 'selected' : '' %>
                          data-minspend="<%= v.minSpend || 0 %>"
                          data-discount="<%= v.discount %>"
                        >
                          <%= v.code %> - â‚±<%= v.discount %>
                          <% if (v.minSpend && v.minSpend > 0) { %>
                            (Min. spend: â‚±<%= v.minSpend.toFixed(2) %>)
                          <% } %>
                        </option>
                  <% }}); %>
                <% } %>
              </select>
            </div>
            <!-- Voucher Minimum Spend Alert -->
            <div id="voucherMinimumInlineAlert" class="voucher-minimum-alert">
              <i class="fas fa-exclamation-circle me-2 text-warning"></i>
              <span id="inlineVoucherAlertMessage"></span>
            </div>
          </div>
        </div>

        <!-- ðŸ’µ Totals Section -->
        <div class="totals-section">
          <ul class="list-unstyled mb-3">
            <li class="d-flex justify-content-between mb-2">
              <span>Gross Total:</span>
              <span>â‚±<%= grossTotal.toFixed(2) %></span>
            </li>
            <% if (pwdDiscountAmount > 0) { %>
              <li class="d-flex justify-content-between mb-2 text-success">
                <span><i class="fas fa-tag me-2"></i>PWD 20% Discount:</span>
                <span>-â‚±<%= pwdDiscountAmount.toFixed(2) %></span>
              </li>
            <% } %>
            <% if (voucherDiscountAmount > 0) { %>
              <li class="d-flex justify-content-between mb-2 text-success">
                <span><i class="fas fa-ticket-alt me-2"></i>Voucher (<%= voucherCode %>):</span>
                <span>-â‚±<%= voucherDiscountAmount.toFixed(2) %></span>
              </li>
            <% } %>
            <li class="border-top my-3"></li>
            <li class="d-flex justify-content-between fw-bold fs-5">
              <span>Net Total:</span>
              <span class="text-primary">â‚±<%= netTotal.toFixed(2) %></span>
            </li>
          </ul>
          <div class="d-flex justify-content-center">
                      <button class="btn gradient-btn w-40 rounded-pill py-2 fw-bold" data-bs-toggle="modal" data-bs-target="#stepOneModal" id="proceedToPaymentBtn">
            <i class="fas fa-credit-card me-2"></i>Proceed to Payment
          </button>
          </div>
        </div>
      </div>
    </div>

    <div class="text-center mt-4">
      <a href="/user/menu" class="btn back-btn text-decoration-none">
        <i class="fas fa-arrow-left me-2"></i>Back to Menu
      </a>
    </div>
  </div>

  <!-- ðŸª™ Step 1 Modal -->
  <div class="modal fade" id="stepOneModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title fw-semibold"><i class="fas fa-qrcode me-2"></i>Scan QR Code (Pickup Only)</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body text-center p-4">
          <h3 class="fw-bold mb-3 text-primary">GCASH</h3>
          <div class="qr-container">
            <img src="<%= settings.orderQR %>" alt="Order QR" width="280" class="img-fluid rounded-3">
          </div>
          <p class="fw-semibold mt-3">Please scan the QR code before proceeding.</p>
          <div class="net-total-display mt-3">
            Total Amount: â‚±<span id="netTotalDisplay"><%= netTotal.toFixed(2) %></span>
          </div>
        </div>
        <div class="modal-footer justify-content-center">
          <button class="btn gradient-btn w-40 text-white fw-semibold rounded-pill py-2"
                  data-bs-target="#stepTwoModal" data-bs-toggle="modal" data-bs-dismiss="modal">
            Next <i class="fas fa-arrow-right ms-2"></i>
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- ðŸ“ Step 2 Modal -->
  <div class="modal fade" id="stepTwoModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title fw-semibold"><i class="fas fa-credit-card me-2"></i>Complete Payment Details</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="/user/placeorder" method="POST" enctype="multipart/form-data">
          <div class="modal-body p-4">
            <input type="hidden" name="voucherCode" id="finalVoucherCode" value="<%= voucherCode || '' %>">

            <div class="row g-2 mb-3">
              <div class="col">
                <label class="form-label fw-semibold">First Name</label>
                <input type="text" class="form-control" value="<%= user.firstName %>" readonly>
              </div>
              <div class="col">
                <label class="form-label fw-semibold">Last Name</label>
                <input type="text" class="form-control" value="<%= user.lastName %>" readonly>
              </div>
            </div>

            <div class="mb-3">
              <label class="form-label fw-semibold">Email</label>
              <input type="email" class="form-control" value="<%= user.email %>" readonly>
            </div>

            <div class="mb-3">
              <label class="form-label fw-semibold">Phone Number</label>
              <input type="text" class="form-control" value="<%= user.phoneNumber %>" readonly>
            </div>

            <div class="mb-3">
              <label class="form-label fw-semibold">Reference Number <span class="text-danger">*</span></label>
              <input type="number" class="form-control" name="referenceNumber" maxlength="32" placeholder="Enter reference number" required>
            </div>

            <div class="mb-3">
              <label class="form-label fw-semibold">Upload Proof of Payment <span class="text-danger">*</span></label> 
              <input type="file" class="form-control" name="proofOfPayment" accept="image/*" required>
              <div class="form-text">Please upload a screenshot of your payment confirmation.</div>
            </div>

            <div class="mb-3">
              <label class="form-label fw-semibold">Note (optional)</label>
              <textarea class="form-control" name="note" placeholder="Add any special request..." rows="3"></textarea>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-danger rounded-pill px-4" data-bs-dismiss="modal"><i class="bi bi-x-lg"></i> Cancel</button>
            <button type="submit" class="btn gradient-btn text-white fw-semibold rounded-pill px-4">
              <i class="fas fa-check me-2"></i> Confirm Order
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    // ðŸ”¹ Hide loader on page show
    window.addEventListener("pageshow", function () {
      document.getElementById("loadingOverlay").style.display = "none";
    });

    // ðŸ”¹ Show loader when submitting
    document.addEventListener('DOMContentLoaded', () => {
      const orderForm = document.querySelector('#stepTwoModal form');
      const confirmBtn = orderForm.querySelector('button[type="submit"]');
      const loadingOverlay = document.getElementById('loadingOverlay');

      orderForm.addEventListener('submit', () => {
        confirmBtn.disabled = true;
        confirmBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Processing...';
        loadingOverlay.style.display = 'flex';
      });
    });

    // Update step indicators when modals are shown
    document.addEventListener('DOMContentLoaded', function() {
      const stepOneModal = document.getElementById('stepOneModal');
      const stepTwoModal = document.getElementById('stepTwoModal');
      
      stepOneModal.addEventListener('show.bs.modal', function() {
        document.querySelectorAll('.step')[1].classList.add('active');
      });
      
      stepTwoModal.addEventListener('show.bs.modal', function() {
        document.querySelectorAll('.step')[2].classList.add('active');
      });
    });

    // Voucher Minimum Spend Validation & Auto-submit
    document.addEventListener('DOMContentLoaded', function() {
      const voucherSelect = document.getElementById('voucherSelect');
      const voucherMinimumAlert = document.getElementById('voucherMinimumAlert');
      const voucherAlertMessage = document.getElementById('voucherAlertMessage');
      const inlineVoucherAlert = document.getElementById('voucherMinimumInlineAlert');
      const inlineVoucherAlertMessage = document.getElementById('inlineVoucherAlertMessage');
      const proceedToPaymentBtn = document.getElementById('proceedToPaymentBtn');
      const finalVoucherCode = document.getElementById('finalVoucherCode');
      
      // Get the gross total from the page
      const grossTotal = <%= grossTotal %>;
      let autoSubmitTimeout = null;
      
      function checkVoucherMinimumSpend() {
        const selectedOption = voucherSelect.options[voucherSelect.selectedIndex];
        const minSpend = parseFloat(selectedOption.getAttribute('data-minspend')) || 0;
        const voucherCode = selectedOption.value;
        const discount = parseFloat(selectedOption.getAttribute('data-discount')) || 0;
        
        // Hide alerts by default
        voucherMinimumAlert.style.display = 'none';
        inlineVoucherAlert.classList.remove('show');
        
        // Update the final voucher code for the order form
        finalVoucherCode.value = voucherCode;
        
        // If a voucher is selected and has minimum spend requirement
        if (voucherCode && minSpend > 0 && grossTotal < minSpend) {
          const amountNeeded = minSpend - grossTotal;
          const message = `You need to spend â‚±${amountNeeded.toFixed(2)} more to use voucher "${voucherCode}" (Minimum spend: â‚±${minSpend.toFixed(2)})`;
          
          // Show alerts
          voucherAlertMessage.textContent = message;
          voucherMinimumAlert.style.display = 'block';
          
          inlineVoucherAlertMessage.textContent = message;
          inlineVoucherAlert.classList.add('show');
          
          // Disable proceed to payment button
          proceedToPaymentBtn.disabled = true;
          proceedToPaymentBtn.style.opacity = '0.6';
          proceedToPaymentBtn.style.cursor = 'not-allowed';
          
          return false;
        } else {
          // Enable proceed to payment button
          proceedToPaymentBtn.disabled = false;
          proceedToPaymentBtn.style.opacity = '1';
          proceedToPaymentBtn.style.cursor = 'pointer';
          
          return true;
        }
      }
      
      function autoSubmitVoucher() {
        const selectedOption = voucherSelect.options[voucherSelect.selectedIndex];
        const voucherCode = selectedOption.value;
        
        if (voucherCode && checkVoucherMinimumSpend()) {
          // Show loading state
          voucherSelect.classList.add('voucher-loading');
          
          // Clear any existing timeout
          if (autoSubmitTimeout) {
            clearTimeout(autoSubmitTimeout);
          }
          
          // Submit after a short delay to show feedback
          autoSubmitTimeout = setTimeout(() => {
            // Create a form and submit it
            const form = document.createElement('form');
            form.method = 'GET';
            form.action = '/user/placeorder';
            
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'voucher';
            input.value = voucherCode;
            form.appendChild(input);
            
            document.body.appendChild(form);
            form.submit();
          }, 800);
        } else if (!voucherCode) {
          // If no voucher selected, submit to remove voucher
          const form = document.createElement('form');
          form.method = 'GET';
          form.action = '/user/placeorder';
          
          const input = document.createElement('input');
          input.type = 'hidden';
          input.name = 'voucher';
          input.value = '';
          form.appendChild(input);
          
          document.body.appendChild(form);
          form.submit();
        }
      }
      
      // Check on page load
      checkVoucherMinimumSpend();
      
      // Auto-submit when voucher selection changes
      voucherSelect.addEventListener('change', function() {
        autoSubmitVoucher();
      });
      
      // Also check when trying to proceed to payment
      proceedToPaymentBtn.addEventListener('click', function(e) {
        if (!checkVoucherMinimumSpend()) {
          e.preventDefault();
          // Scroll to alert
          voucherMinimumAlert.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }
      });
    });
  </script>

  <% if (pwdCooldownRemaining > 0 && pwdCountdownEnd) { %>
  <script>
    const countdownEnd = new Date("<%= pwdCountdownEnd %>").getTime();
    const timerElement = document.getElementById('pwd-timer');
    function updateTimer() {
      const now = new Date().getTime();
      const distance = countdownEnd - now;
      if (distance <= 0) {
        timerElement.innerHTML = "Available Now!";
        return;
      }
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);
      timerElement.innerHTML = `${hours}h ${minutes}m ${seconds}s`;
    }
    updateTimer();
    setInterval(updateTimer, 1000);
  </script>
  <% } %>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const form = document.querySelector('#stepTwoModal form');
  const refInput = form.querySelector('input[name="referenceNumber"]');
  const proofInput = form.querySelector('input[name="proofOfPayment"]');
  const confirmBtn = form.querySelector('button[type="submit"]');

  /** ---- Disable Confirm Button Initially ---- **/
  confirmBtn.disabled = true;

  /** ---- Function to Check If All Fields Are Valid ---- **/
  function validateFormFields() {
    const isRefValid = refInput.value.trim().length === 13;
    const hasProof = proofInput.files.length > 0;
    confirmBtn.disabled = !(isRefValid && hasProof);
  }

  /** ---- Reference Number Validation ---- **/
  refInput.addEventListener("input", () => {
    // Only allow numbers
    refInput.value = refInput.value.replace(/\D/g, "");
    const length = refInput.value.length;

    // Limit to 13 digits
    if (length > 13) {
      refInput.value = refInput.value.slice(0, 13);
      Swal.fire({
        icon: "warning",
        title: "Maximum Limit Reached",
        text: "GCash reference number must be exactly 13 digits.",
        showConfirmButton: false,
        timer: 1500
      });
    }

    validateFormFields();
  });

  /** ---- Proof of Payment Validation (JPG/PNG only) ---- **/
  proofInput.addEventListener("change", () => {
    const file = proofInput.files[0];
    if (!file) {
      validateFormFields();
      return;
    }

    const validTypes = ["image/jpeg", "image/png"];
    if (!validTypes.includes(file.type)) {
      Swal.fire({
        icon: "error",
        title: "Invalid File Type",
        text: "Only JPG and PNG image formats are allowed.",
        showConfirmButton: false,
        timer: 1500
      });
      proofInput.value = "";
    }

    validateFormFields();
  });

  /** ---- Final Validation on Submit ---- **/
  form.addEventListener("submit", (e) => {
    const refValue = refInput.value.trim();

    if (refValue.length !== 13) {
      e.preventDefault();
      Swal.fire({
        icon: "error",
        title: "Invalid Reference Number",
        text: "Please enter a complete 13-digit GCash reference number.",
        showConfirmButton: false,
        timer: 1500
      });
      refInput.focus();
      return;
    }

    if (!proofInput.value) {
      e.preventDefault();
      Swal.fire({
        icon: "error",
        title: "Missing Proof of Payment",
        text: "Please upload your proof of payment (JPG or PNG).",
        showConfirmButton: false,
        timer: 1500
      });
      proofInput.focus();
      return;
    }
  });
});
</script>



