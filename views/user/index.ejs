<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>User Dashboard</title>
  <link rel="icon" type="image/png" href="https://scontent.fmnl8-6.fna.fbcdn.net/v/t39.30808-6/380741479_131206030075540_3076164827494524329_n.jpg">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/UserMenu.css">
  <script src="https://cdn.jsdelivr.net/npm/moment@2.29.4/moment.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    .stat-circle {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 28px;
      font-weight: bold;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .stat-label {
      font-size: 14px;
      font-weight: 600;
      text-transform: uppercase;
      color: #333;
    }
    @media (max-width: 576px) {
      .stat-circle {
        width: 80px;
        height: 80px;
        font-size: 20px;
      }
      .stat-label {
        font-size: 12px;
      }
    }
  </style>
</head>

<body>
  <!-- Sidebar -->
  <div class="sidebar" id="sidebar">
    <div class="d-flex justify-content-center mb-5 mt-3">
       <img src="<%= settings.logo ? settings.logo : '/images/napslogo.png' %>" alt="Logo" width="150" />
    </div>
    <nav>
      <a href="/user/index" class="active"><i class="bi bi-house-door"></i> Home</a>
      <a href="/user/menu"><i class="bi bi-list-ul"></i> Browse Menu</a>
      <a href="/user/reservation"><i class="bi bi-calendar-check"></i> Book Reservation</a>
      <a href="/user/orders"><i class="bi bi-bag"></i> Orders</a>
      <a href="/user/reviews"><i class="bi bi-star"></i> Reviews</a>
      <a href="/user/voucher"><i class="bi bi-ticket-perforated"></i> Voucher</a>
    </nav>
  </div>

  <!-- Navbar -->
  <div class="navbar-custom-wrapper">
    <nav class="navbar-custom d-flex justify-content-between align-items-center">
      <% if (user) { %>
        <div class="d-flex align-items-center gap-3">
          <a href="/user/profile" class="d-flex align-items-center text-decoration-none text-dark">
            <% if (user.profileImage) { %>
              <img src="<%= user.profileImage %>" alt="Profile" width="45" height="45" class="rounded-circle me-2" style="object-fit: cover;">
            <% } else { %>
              <div class="d-flex justify-content-center align-items-center me-2" style="width: 45px; height: 45px; border-radius: 50%; background-color: #ccc;">
                <i class="bi bi-person text-white"></i>
              </div>
            <% } %>
            <div class="admin-info d-none d-md-block">
              <div class="fw-semibold"><%= user.firstName || 'User' %></div>
              <small class="text-muted"><%= user.email %></small>
            </div>
          </a>
        </div>
        <div class="d-flex align-items-center gap-3">
          <a href="/logout" class="btn btn-sm btn-danger d-flex align-items-center">
            <i class="bi bi-box-arrow-right me-1"></i> Logout
          </a>
        </div>
      <% } %>
    </nav>
  </div>

  <!-- Main Content -->
  <div class="container py-3">
    <div class="main-content">
      <div class="container mb-5">
        <div class="row g-4 justify-content-center text-center">

          <div class="col-6 col-md-3">
            <div class="card shadow h-100">
              <div class="card-body d-flex flex-column justify-content-center align-items-center">
                <div class="stat-circle bg-warning text-dark"><%= pendingOrders.length %></div>
                <div class="stat-label mt-2">Pending Orders</div>
              </div>
            </div>
          </div>

          <div class="col-6 col-md-3">
            <div class="card shadow h-100">
              <div class="card-body d-flex flex-column justify-content-center align-items-center">
                <div class="stat-circle bg-primary text-white"><%= processingOrders.length %></div>
                <div class="stat-label mt-2">Processing Orders</div>
              </div>
            </div>
          </div>

          <div class="col-6 col-md-3">
            <div class="card shadow h-100">
              <div class="card-body d-flex flex-column justify-content-center align-items-center">
                <div class="stat-circle bg-success text-white"><%= completedOrders.length %></div>
                <div class="stat-label mt-2">Completed Orders</div>
              </div>
            </div>
          </div>

          <div class="col-6 col-md-3">
            <div class="card shadow h-100">
              <div class="card-body d-flex flex-column justify-content-center align-items-center">
                <div class="stat-circle bg-danger text-white"><%= rejectedOrders.length %></div>
                <div class="stat-label mt-2">Rejected Orders</div>
              </div>
            </div>
          </div>

          <div class="col-6 col-md-3">
            <div class="card shadow h-100">
              <div class="card-body d-flex flex-column justify-content-center align-items-center">
                <div class="stat-circle bg-secondary text-white"><%= cancelledOrders.length %></div>
                <div class="stat-label mt-2">Cancelled Orders</div>
              </div>
            </div>
          </div>

          <div class="col-6 col-md-3">
            <div class="card shadow h-100">
              <div class="card-body d-flex flex-column justify-content-center align-items-center">
                <div class="stat-circle bg-info text-dark"><%= pendingReservations.length %></div>
                <div class="stat-label mt-2">Pending Reservations</div>
              </div>
            </div>
          </div>

          <div class="col-6 col-md-3">
            <div class="card shadow h-100">
              <div class="card-body d-flex flex-column justify-content-center align-items-center">
                <div class="stat-circle bg-dark text-white"><%= completedReservations.length %></div>
                <div class="stat-label mt-2">Confirmed Reservations</div>
              </div>
            </div>
          </div>

          <div class="col-6 col-md-3">
            <div class="card shadow h-100">
              <div class="card-body d-flex flex-column justify-content-center align-items-center">
                <div class="stat-circle bg-success text-white"><%= availableVouchers.length %></div>
                <div class="stat-label mt-2">Available Vouchers</div>
              </div>
            </div>
          </div>

          <!-- Optional: Total Orders -->
          <div class="col-6 col-md-3">
            <div class="card shadow h-100">
              <div class="card-body d-flex flex-column justify-content-center align-items-center">
                <div class="stat-circle bg-secondary text-white">
                  <%= pendingOrders.length + processingOrders.length + completedOrders.length + rejectedOrders.length + cancelledOrders.length %>
                </div>
                <div class="stat-label mt-2">Total Orders</div>
              </div>
            </div>
          </div>

          <!-- Optional: Total Reservations -->
          <div class="col-6 col-md-3">
            <div class="card shadow h-100">
              <div class="card-body d-flex flex-column justify-content-center align-items-center">
                <div class="stat-circle bg-primary text-white">
                  <%= pendingReservations.length + completedReservations.length %>
                </div>
                <div class="stat-label mt-2">Total Reservations</div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap Bundle JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
