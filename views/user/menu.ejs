                <div class="row justify-content-center g-3">
                    <div class="col-md-5">
                        <div class="custom-input">
                            <i class="bi bi-search"></i>
                            <input type="text" id="searchInput" class="form-control" placeholder="Search by product name...">
                        </div>
                    </div>
                    <div class="col-md-5">
