<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard | Menu</title>
    <link rel="icon" type="image/png" href="https://scontent.fmnl8-6.fna.fbcdn.net/v/t39.30808-6/380741479_131206030075540_3076164827494524329_n.jpg">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/UserMenu.css">
</head>
<body>
    <div class="sidebar" id="sidebar">
        <div class="d-flex justify-content-center mb-5 mt-3">
            <img src="<%= settings.logo ? settings.logo : '/images/napslogo.png' %>" alt="Logo" width="150" />
        </div>
        <nav>
            <a href="/user/menu" class="active"><i class="bi bi-list-ul"></i> Browse Menu</a>
            <a href="/user/reservation"><i class="bi bi-calendar-check"></i> Book Reservation</a>
            <a href="/user/orders"><i class="bi bi-bag"></i> Orders</a>
            <a href="/user/reviews"><i class="bi bi-star"></i> Reviews</a>
            <a href="/user/voucher"><i class="bi bi-ticket-perforated"></i> Voucher</a>
            <a href="/user/myreservation"><i class="bi bi-calendar-event"></i> My Reservations</a>
        </nav>
    </div>

    <div class="navbar-custom-wrapper">
        <nav class="navbar-custom d-flex justify-content-between align-items-center">
            <% if (user) { %>
                <div class="d-flex align-items-center gap-3">
                    <a class="d-flex align-items-center text-decoration-none text-dark">
                        <% if (user.profileImage) { %>
                            <img src="<%= user.profileImage %>" alt="Profile" width="45" height="45" class="rounded-circle me-2" style="object-fit: cover;">
                        <% } else { %>
                            <div class="d-flex justify-content-center align-items-center me-2" style="width: 45px; height: 45px; border-radius: 50%; background-color: #ccc;">
                                <i class="bi bi-person text-white"></i>
                            </div>
                        <% } %>
                        <div class="admin-info d-none d-md-block">
                            <div class="fw-semibold"><%= user.firstName || 'User' %></div>
                            <small class="text-muted"><%= user.email %></small>
                        </div>
                    </a>
                </div>

                <div class="d-flex align-items-center gap-3">
                    <a href="#" class="btn btn-primary position-relative" data-bs-toggle="offcanvas" data-bs-target="#cartOffcanvas">
                        <i class="bi bi-cart cart-icon"></i>
                        <span class="cart-badge fw-bold" id="cart-count">0</span>
                    </a>
                    <a href="/logout" class="btn btn-sm btn-danger d-flex align-items-center">
                        <i class="bi bi-box-arrow-right me-1"></i> Logout
                    </a>
                </div>
            <% } %>
        </nav>
    </div>

    <div class="container py-3"> 
        <div class="main-content">

<div id="orderMessage" class="alert alert-danger text-center fw-semibold" style="display: none;">
    We're sorry, but the restaurant is 
    <span class="gradient-text">Currently closed.</span>
</div>


            <h2>Our <span>Menu</span></h2>
            
            <div class="filter-container my-4">
                <div class="row justify-content-center g-3">
                    <div class="col-md-5">
                        <div class="custom-input">
                            <i class="bi bi-search"></i>
                            <input type="text" id="searchInput" class="form-control" placeholder="Search by product name...">
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="custom-input">
                            <i class="bi bi-funnel"></i>
                            <select id="categoryFilter" class="form-select">
                                <option value="">All Categories</option>
                                <option value="seafood">Seafood</option>
                                <option value="appetizer">Appetizer</option>
                                <option value="meat">Meat</option>
                                <option value="vegetable">Vegetable</option>
                                <option value="dessert">Dessert</option>
                                <option value="beverage">Beverage</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="product-grid" id="productGrid">
                <% products.forEach(product => { %>
                    <div class="product-card product-item" data-name="<%= product.name.toLowerCase() %>" data-category="<%= product.category.toLowerCase() %>">
                        <img src="/uploads/<%= product.image %>" alt="<%= product.name %>">
                        <div class="product-details">
                            <h6 class="product-name"><%= product.name %></h6>
                            <p class="product-description"><%= product.description %></p>
                            <span class="product-category"><%= product.category %></span>
                            <p class="product-price">₱<%= product.price.toFixed(2) %></p>
                            <form action="/cart/add" method="POST">
                                <input type="hidden" name="productId" value="<%= product._id %>">
                                <button type="submit" class="add-to-cart-btn">
                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                </button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>
            
            <div id="noResultsMessage" class="text-center mt-5 text-muted fw-semibold" style="display: none;">
                <i class="bi bi-emoji-frown" style="font-size: 2rem;"></i><br>
                No products found matching your criteria.
            </div>
        </div>
    </div>

    <div class="offcanvas offcanvas-end" tabindex="-1" id="cartOffcanvas">
        <div class="offcanvas-header">
            <h3 class="offcanvas-title fw-bold mt-2 w-100 text-center">
                Your <span style="background: linear-gradient(to right, #1e90ff, #00bfff); -webkit-background-clip: text; background-clip: text; color: transparent;">Cart</span>
            </h3>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body d-flex flex-column">
            <div class="flex-grow-1" id="cartItemsContainer">
                <p class="text-muted text-center">Hungry? You haven't added anything to your cart!</p>
            </div>
            <div class="d-flex justify-content-between align-items-center p-2 mt-3 border-top">
                <p class="fw-bold mb-0">Total: ₱<span id="cartTotal" class="text-dark">0.00</span></p>
                <a href="/user/placeorder" class="btn btn-primary">Place Order</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function loadCart() {
            try {
                const res = await fetch('/cart/items');
                let items = await res.json();
                items = items.filter(item => item.productId);

                const cartItemsContainer = document.getElementById('cartItemsContainer');
                const cartCount = document.getElementById('cart-count');
                const cartTotal = document.getElementById('cartTotal');

                if (!items.length) {
                    cartItemsContainer.innerHTML = "<p class='text-muted'>Hungry? You haven't added anything to your cart!</p>";
                    cartCount.textContent = '0';
                    cartTotal.textContent = '0.00';
                    return;
                }

                let html = '<ul class="list-group">';
                let totalQty = 0;
                let totalPrice = 0;
                items.forEach(item => {
                    const price = item.productId.price * item.quantity;
                    const disableMinus = item.quantity <= 1 ? 'btn-disabled' : '';
                    html += `
                        <li class="list-group-item d-flex align-items-center gap-2">
                            <img src="/uploads/${item.productId.image}" alt="${item.productId.name}" width="50" height="50" style="object-fit: cover; border-radius: 5px;">
                            <div class="flex-grow-1">
                                <strong>${item.productId.name}</strong><br>
                                <small>₱${item.productId.price.toFixed(2)}</small>
                            </div>
                            <div class="btn-group btn-group-sm align-items-center">
                                <button class="btn btn-outline-primary me-2 ${disableMinus}" onclick="${item.quantity > 1 ? `updateCartItem('${item.productId._id}', 'decrease')` : ''}">-</button>
                                <span class="badge bg-primary rounded-pill px-3">${item.quantity}</span>
                                <button class="btn btn-outline-primary ms-2" onclick="updateCartItem('${item.productId._id}', 'increase')">+</button>
                            </div>
                            <button class="btn btn-sm btn-danger ms-2" onclick="removeCartItem('${item.productId._id}')">
                                <i class="bi bi-trash"></i>
                            </button>
                        </li>
                    `;
                    totalQty += item.quantity;
                    totalPrice += price;
                });
                html += '</ul>';
                cartItemsContainer.innerHTML = html;
                cartCount.textContent = items.length;
                cartTotal.textContent = totalPrice.toFixed(2);
            } catch (err) {
                console.error('Error loading cart:', err);
            }
        }

        function updateCartItem(productId, action) {
            fetch(`/cart/${action}`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ productId })
            }).then(() => loadCart());
        }

        function removeCartItem(productId) {
            fetch('/cart/remove', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ productId })
            }).then(() => loadCart());
        }

        function filterProducts() {
            const searchValue = document.getElementById('searchInput').value.toLowerCase();
            const categoryValue = document.getElementById('categoryFilter').value;
            const items = document.querySelectorAll('.product-item');
            let visibleCount = 0;

            items.forEach(item => {
                const name = item.dataset.name;
                const category = item.dataset.category;
                const matchSearch = name.includes(searchValue);
                const matchCategory = categoryValue === '' || category === categoryValue;
                const isVisible = matchSearch && matchCategory;

                item.style.display = isVisible ? '' : 'none';
                if (isVisible) visibleCount++;
            });

            const noResults = document.getElementById('noResultsMessage');
            noResults.style.display = visibleCount === 0 ? 'block' : 'none';
        }

        document.getElementById('searchInput').addEventListener('input', filterProducts);
        document.getElementById('categoryFilter').addEventListener('change', filterProducts);

        function showClosedMessage() {
            document.getElementById('orderMessage').style.display = 'block';
            document.querySelectorAll('.add-to-cart-btn').forEach(btn => {
                btn.disabled = true;
                btn.style.opacity = '0.6';
                btn.style.cursor = 'not-allowed';
            });
        }

        window.onload = function() {
            const restaurantClosed = localStorage.getItem('restaurantClosed');
            if (restaurantClosed === 'true') {
                showClosedMessage();
            }
            loadCart();
        };

        document.querySelector('[data-bs-target="#cartOffcanvas"]').addEventListener('click', loadCart);
    </script>
</body>
</html>
