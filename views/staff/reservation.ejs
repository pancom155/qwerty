  <option value="ready_to_pickup">Ready to Pickup</option>
</select>


</div>

        <table class="table table-bordered table-hover">
          <thead class="table-dark">
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Table</th>
              <th>Reservation_fee</th>
              <th>Date</th>
              <th>Time</th>
              <th>GCash Ref</th>
              <th>Proof</th>
